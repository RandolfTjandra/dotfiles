# Aliases
alias dots="cd ${DOTS}"
alias lg="gls -aFlh --group-directories-first --color"
alias l="lsd -AFlh --group-directories-first"
alias matrix="cmatrix -absr"
alias pipes="pipes.sh -p 3 -t 0 -R"
alias vim="nvim"

alias dev="cd ~/Dev"
alias gocover="go test ./... -coverprofile cover.out && go tool cover -html=cover.out -o coverage.html && go tool cover -func cover.out | grep total"


# Work related
alias projects='cd /Users/rtjandra/Dev/projects/cx-projects'
alias gogo='cd /Users/rtjandra/Dev/projects/cx-projects/golang/src/github.com'

# Opens jira page for current branch
function jira() {
    python -mwebbrowser https://jira.tenkasu.net/browse/$(git branch | grep '*' | sed -E 's/\* draft-//;s/([a-zA-Z]+-[0-9]+).*/\1/')
}

